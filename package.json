{
   "name": "project",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "type": "commonjs",
   "devDependencies": {
      "@types/cors": "^2.8.17",
      "@types/express": "^5.0.0",
      "@types/node": "^16.11.10",
      "ts-node": "^10.9.2",
      "ts-node-dev": "^2.0.0",
      "typescript": "^5.7.2"
   },
   "dependencies": {
      "cors": "^2.8.5",
      "express": "^4.21.2",
      "pg": "^8.13.1",
      "reflect-metadata": "^0.1.13",
      "tsconfig-paths": "^4.2.0",
      "typeorm": "0.3.20"
   },
   "scripts": {
      "dev": "NODE_ENV=development tsnd -r tsconfig-paths/register --poll --transpile-only --ignore-watch node_modules --respawn src/server.ts",
      "migration:create": "typeorm-ts-node-commonjs migration:create src/shared/database/migrations/default",
      "migration:generate": "typeorm-ts-node-commonjs -d src/config/data-source.ts migration:generate src/shared/database/migrations/default",
      "migration:run": "typeorm-ts-node-commonjs -d src/data-source.ts migration:run"  
    }
}
