{
   "compilerOptions": {
     "lib": [
       "es5",
       "es6"
     ],
     "target": "es6",  // Especifica a versão do JavaScript para a qual o TypeScript será compilado
     "module": "commonjs", // Módulo de tipo CommonJS (necessário para o Node.js)
     "moduleResolution": "node", // Como o TypeScript resolve módulos
     "outDir": "./build", // Diretório de saída para os arquivos compilados
     "emitDecoratorMetadata": true, // Necessário para usar decorators com TypeORM, por exemplo
     "experimentalDecorators": true, // Habilita o suporte a decorators no TypeScript
     "sourceMap": true, // Gera arquivos .map para depuração
     "esModuleInterop": true, // Habilita a interoperabilidade com módulos ES
     "skipLibCheck": true,  // Ignora a verificação de tipo de arquivos de declaração (pode melhorar a performance)
     "strict": true // Habilita verificações estritas (facilita encontrar erros no código)
   },
   "include": [
     "src/**/*.ts" // Incluir todos os arquivos TypeScript na pasta src
   ],
   "exclude": [
     "node_modules" // Exclui a pasta node_modules da compilação
   ]
 }
 